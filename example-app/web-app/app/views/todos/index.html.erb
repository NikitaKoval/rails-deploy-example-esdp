<block tpl-id="todos">
    <div id="todoapp">
        <header id="header">
            <h1>Todos</h1>
                  <input id="new-todo" placeholder="What needs to be done? (100)" maxlength="100">
        </header>

        <section id="main">
            <ul id="todo-list" class="data-cloak">
            </ul>
        </section>

        <footer id="footer" class="data-cloak">
            <span id="todo-count"><strong class="uncomCount">0</strong>&nbsp; left</span>
            <!-->
            -->

            <button id="clear-completed" class="footer-button footer-text">Clear completed &nbsp; <span class="comCount">0</span></button>
        </footer>
    </div>

</block>
